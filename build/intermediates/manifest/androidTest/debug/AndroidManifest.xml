<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.askzhao.dp.android.sdk.test" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="23" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.askzhao.dp.android.sdk.test"
        android:targetPackage="com.askzhao.dp.android.sdk.test" />
    <!-- 同步数据需要网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 获取运营商信息 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application android:debuggable="true" >
        <uses-library android:name="android.test.runner" />

        <provider
            android:name="com.askzhao.dp.android.sdk.SensorsDataContentProvider"
            android:authorities="com.askzhao.dp.android.sdk.test.SensorsDataContentProvider"
            android:enabled="true"
            android:exported="false" />

        <meta-data
            android:name="com.sensorsdata.analytics.android.MainProcessName"
            android:value="com.askzhao.dp.android.sdk.test" />
    </application>

</manifest>